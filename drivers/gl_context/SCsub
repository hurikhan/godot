Import('env')

env.add_source_files(env.drivers_sources,"*.cpp")
env.add_source_files(env.drivers_sources,"*.c")

#env.add_source_files(env.drivers_sources,"context_gl.cpp") // FIXME: this uncommented line is only needed for wayland

if (env.get('glew') == 'yes'):
	env.add_source_files(env.drivers_sources,"glew.c")
	env.Append(CPPFLAGS = ['-DGLEW_ENABLED'])
	env.Append(CPPFLAGS = ['-DGLEW_STATIC'])
	env.Append(CPPPATH = ['.'])

Export('env')
